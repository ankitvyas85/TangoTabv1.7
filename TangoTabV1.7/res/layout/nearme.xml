<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:visibility="gone"
        android:id="@+id/getStartedRl"
        android:background="@drawable/splash_screen">

        <Button
            android:id="@+id/getStarted"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
           android:visibility="gone"
           android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@drawable/getstartedselector"
            android:text="Get Started" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/topMenuRL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000000" >

        <RelativeLayout
            android:id="@+id/mainMenuRL"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:clickable="true" >

            <Button
                android:id="@+id/topMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/topmenu"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meMenuRL"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/mainMenuRL"
            android:clickable="true" >

            <Button
                android:id="@+id/topMeMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/topme"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nearmeMenuRL"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/meMenuRL"
            android:clickable="true" >

            <Button
                android:id="@+id/topNearmeMenuMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/toptangotab_on"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mapMenuRL"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/nearmeMenuRL"
            android:clickable="true" >

            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/topmap"
                android:clickable="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchMenuRL"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/mapMenuRL"
            android:clickable="true" >

            <Button
                android:id="@+id/topSearchMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/topsearch"
                android:clickable="false" />
        </RelativeLayout>
    </RelativeLayout>
<RelativeLayout    android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
   <com.tangotab.nearMe.activity.NearMeGallery
        android:id="@+id/nearMeGalleryView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:spacing="0dp"
        />
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/up"
         
           android:layout_alignBottom="@+id/nearMeGalleryView"
  android:layout_centerInParent="true"
   
       />
    </RelativeLayout>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="30dip"
    android:background="@drawable/white_one"
    android:id="@+id/relativeLayoutBackground"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black" 
        />
    
      <TextView
          android:id="@+id/tvDinningType"
          android:layout_width="100dp"
          android:layout_height="fill_parent"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_margin="1dp"
          android:background="@drawable/smallbtnblankgreen"
          android:gravity="center"
          android:paddingLeft="5dp"
          android:paddingRight="3dp"
          android:text="Dining"
          android:textStyle="bold"
          android:textColor="@android:color/black" />

      <TextView
          android:layout_width="100dp"
          android:layout_height="fill_parent"
          android:layout_alignParentLeft="true"
          android:layout_centerInParent="true" 
          android:gravity="center"
          android:paddingLeft="5dp"
          android:paddingRight="3dp"
          android:background="@drawable/smallbtnblankgreen"
          android:text="Current Date"
          android:layout_margin="1dp"
          android:textStyle="bold"
          android:id="@+id/tvCurrentDate"
          android:textColor="@android:color/black" 
          />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/locationInfo"
    android:layout_width="fill_parent"
    android:layout_height="20dip"
    android:gravity="center">
      <TextView
          android:id="@+id/locationLabel"
          android:layout_width="127dp"
          android:layout_height="fill_parent"
          android:gravity="center"
          android:text="Location"
          android:textStyle="bold"
          android:textColor="@android:color/black"
          android:background="#e1e1e1"
          android:singleLine="true"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/emptylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Sorry, there are no offers around your current location. Please broaden your search criteria using the search function by selecting the menu button."
            android:textColor="#8A8A8A"
            android:textSize="18dp"
            android:visibility="visible" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="#ffffff"
            android:dividerHeight="2dp" 
            android:listSelector="#00000000"/>
    </LinearLayout>   

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF" />
    
    <RelativeLayout
            android:id="@+id/statusbarFed"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/statusbar_fed"
            android:gravity="center"
            android:clickable="true" >
    <ImageView
        android:id="@+id/cup"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/cup"
        android:layout_marginRight="4dp"/>
    <TextView
        android:id="@+id/statusbarFedLabel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_toRightOf="@id/cup"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
 
<RelativeLayout
            android:id="@+id/statusPendingOffers"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/statusbar_pending_offer"
            android:gravity="center"
            android:clickable="true" >
    
    <ImageView
        android:id="@+id/dollarsymbol"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/dollarsymbol"
        android:layout_marginRight="4dp"/>
    
    <TextView
        android:id="@+id/statusbarPendingOffersLabel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_toRightOf="@id/dollarsymbol"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
    </RelativeLayout>
 <LinearLayout
            android:id="@+id/wheelLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:orientation="vertical" 
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp" >

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/smallgreenselector"
                        android:text="Cancel"
                        android:textSize="16dp"
                        android:textStyle="bold" 
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text=" Meal Devider"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/doneBtn"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/smallgreenselector"
                        android:text="Done"
                        android:textSize="16dp"
                        android:textStyle="bold" 
                        android:textColor="@android:color/black" />
                </RelativeLayout>

               <kankan.wheel.widget.WheelView
                    android:id="@+id/radiusWheelView"
                    android:layout_width="fill_parent"
                    android:layout_height="135dp"
                    android:layout_gravity="center_vertical"/>           
 </LinearLayout>           
 </LinearLayout>
</LinearLayout>